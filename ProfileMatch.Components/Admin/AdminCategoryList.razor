<MudButton OnClick="(()=>CategoryCreate())" Class="pa-2 mx-2" Variant="Variant.Filled" Color="Color.Primary">@L["Add New"]</MudButton>

<MudTable Items="@Categories" Dense="true" Hover="true" Bordered="false" Striped="false" Filter="new Func<Category,bool>(FilterFunc1)" @bind-SelectedItem="selectedItem1">
    <ToolBarContent>
        <MudText Typo="Typo.h6">@L["Categories"]</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="searchString1" Placeholder=@L["Search"] Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <ColGroup>
        <col />
        <col style="width: 60%;" />
        <col />
        <col />
    </ColGroup>
    <HeaderContent>
        <MudTh>@L["Id"]</MudTh>
        <MudTh>@L["Name"]</MudTh>
        <MudTh>@L["Description"]</MudTh>
        <MudTh>@L["ClosedQuestions"]</MudTh>
        <MudTh>@L["Actions"]</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel=@L["Id"]>@context.Id</MudTd>
        <MudTd DataLabel=@L["Name"]>@context.Name</MudTd>
        <MudTd DataLabel=@L["Description"]>@context.Description</MudTd>
        <MudTd DataLabel=@L["ClosedQuestions"]>@context.ClosedQuestions.Count</MudTd>
        <MudTd DataLabel=@L["Edit"]>
            <MudButton OnClick="((e)=>CategoryUpdate(context))" Color="Color.Tertiary">@L["Edit Category"]</MudButton>
            <MudButton OnClick="((e)=>QuestionCreate(context))" Color="Color.Success">@L["Add ClosedQuestion"]</MudButton>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager RowsPerPageString=@L["Rows per page"] />
    </PagerContent>
</MudTable>
