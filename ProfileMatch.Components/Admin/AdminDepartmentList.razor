
<MudGrid Spacing="0" Class="d-flex justify-space-between">
    <MudItem xs="12" md="5">
    <MudText Typo="Typo.h6">@L["Departments"]</MudText>
    </MudItem>
    <MudItem xs="12" md="5">
        <MudTextField Class="d-flex justify-end"
                      @bind-Value="searchString1"
                      Placeholder=@L["Search"]
                      Adornment="Adornment.Start"
                      Immediate="true"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      IconSize="Size.Medium"></MudTextField>
    </MudItem>
</MudGrid>

<MudTable Items="@Departments" Dense="true" Hover="true" Bordered="false" Striped="false" Filter="new Func<Department,bool>(FilterFunc1)" @bind-SelectedItem="selectedItem1">

    <ToolBarContent>
        <MudButton Variant="Variant.Outlined" Size="Size.Small" OnClick="(()=>DepartmentCreate())" Style="color: var(--mud-palette-info-darken)!important; border-color: var(--mud-palette-info-darken)">@L["New Department"]</MudButton>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>@L["Id"]</MudTh>
        <MudTh>@L["Name"]</MudTh>
        <MudTh>@L["Description"]</MudTh>
        <MudTh>@L["Members"]</MudTh>
        <MudTh>@L["Actions"]</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel=@L["Id"]>@context.Id</MudTd>
        <MudTd DataLabel=@L["Name"]>@context.Name</MudTd>
        <MudTd DataLabel=@L["Description"]>@context.Description</MudTd>
        <MudTd DataLabel=@L["Members"]>@context.ApplicationUsers.Count</MudTd>
        <MudTd DataLabel=@L["Edit"]>
            <MudButton Variant="Variant.Outlined" Size="Size.Small" Style="color: var(--mud-palette-info-darken)!important; border-color: var(--mud-palette-info-darken)" OnClick="((e)=>DepartmentUpdate(context))">@L["Edit Department"]</MudButton>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager RowsPerPageString=@L["Rows per page"] />
    </PagerContent>
</MudTable>