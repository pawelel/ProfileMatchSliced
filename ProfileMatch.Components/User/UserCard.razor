<AuthorizeView>
    <Authorized>
    <MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudAvatar Image="@CurrentUser?.PhotoPath" />
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.body2">@CurrentUser?.FullName</MudText>
                <MudText Typo="Typo.caption">@CurrentUser?.JobTitle</MudText>
            </CardHeaderContent>
        </MudCardHeader>
    </MudCard>
    </Authorized>
    <NotAuthorized></NotAuthorized>
</AuthorizeView>