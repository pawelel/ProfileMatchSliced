@page
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Localization
@using ProfileMatch.Services
@model LoginModel
@inject IStringLocalizer<LanguageService> L

<div class="container d-flex p-3 mx-auto w-100 flex-column">
    <header class="mb-auto">
    </header>

</div>
<form class="form-signin text-center" id="account" method="post">
    <div class="logo"></div>
    <br />
    <h1 class="h3 mb-3">@L["Proszę się zalogować"]</h1>

    <input type="email" id="Input.Email" class="form-control" placeholder="Email" asp-for="Input.Email" required autofocus>
    <input type="password" id="Input.Password" autocomplete="current-password" class="form-control" placeholder=@L["Hasło"] asp-for="Input.Password" required>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" value="remember-me"> @L["Zapamiętaj"]
        </label>
    </div>
    <div class="form-group">
        <div class="d-grid gap-3">
            <button class="btn btn-primary btn-lg" type="submit">@L["Zaloguj"]</button>
        <div>
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword">@L["Forgot your password?"]</a>
            </p>
            <p>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">@L["Resend email confirmation"]</a>
            </p>
            <p>
                <a id="confirm-email-verity" asp-page="./ConfirmEmail">@L["Test Email confirmation VERITY"]</a>
            </p>
             <p>
                <a id="confirm-email-error" asp-page="./ConfirmEmailError">@L["Test Email confirmation ERROR"]</a>
            </p>
        </div>
        </div>
    </div>
</form>
<div>
    <p class="mt-5 mb-5 text-muted text-center">&copy; 2022 Karol Pluciński, Łukasz Pietrzak & Paweł Przytuła</p>
</div>






